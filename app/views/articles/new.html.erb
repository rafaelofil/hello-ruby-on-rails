<h1>New Articles</h1>

<% form_with model: @articles do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @articles.errors.full_messages_for(:title).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @articles.errors.full_messages_for(:body).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>